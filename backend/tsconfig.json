{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@configs/*": [
        "./configs/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@enums/*": [
        "./enums/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
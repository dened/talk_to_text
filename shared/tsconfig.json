{
  "compilerOptions": {

    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "lib": ["es2023"],
    "moduleDetection": "force",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
